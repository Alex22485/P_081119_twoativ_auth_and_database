<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriversApp_0"
    android:orientation="vertical">

    <TextView
        android:id="@+id/checkWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:textSize="25sp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TextHello1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/TextHello2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textSize="25sp"/>
    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/editCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите марку автомобиля"
        android:completionThreshold="1"
        android:completionHint="Введите марку автомобиля"
        android:visibility="invisible" />

    <AutoCompleteTextView
        android:id="@+id/editNumberCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите три цифры гос. номера"
        android:completionThreshold="1"
        android:completionHint="Введите три буквы гос. номера"
        android:visibility="invisible"/>



</LinearLayout>