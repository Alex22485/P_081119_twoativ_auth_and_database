    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оформить заявку"
        android:textSize="15sp"
        android:onClick="backMainList">

    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Временная переход на сервер"
        android:textSize="15sp"
        android:onClick="backMain2List">

    </Button>















