<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="12dp"
        android:enabled="false"
        android:onClick="Exit"
        android:text="Выход" />

    <Button
        android:id="@+id/choisData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:layout_marginBottom="583dp"
        android:enabled="false"
        android:text="Выберите дату поездки"
        android:textSize="20dp">

    </Button>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:text="ВЫБЕРИТЕ НОМЕР РЕЙСА"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/flight_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="№1"
            android:layout_weight="1"
            android:textSize="20dp"
            android:enabled="false"/>

        <Button
            android:id="@+id/flight_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="№2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/flight_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="№3"
            android:layout_weight="1"
            android:textSize="20dp"
            android:enabled="false"/>

        <Button
            android:id="@+id/flight_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="№4"
            android:layout_weight="1"
            android:textSize="20dp"
            android:enabled="false"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="289dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата поездки"

            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       "
            android:textSize="20dp" />
        <TextView
            android:id="@+id/settext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />






    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="235dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Рейс номер"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       "
            android:textSize="20dp" />


        <TextView
            android:id="@+id/setnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />

    </LinearLayout>

    <Button
        android:id="@+id/three_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:layout_marginBottom="135dp"
        android:text="Продолжить"
        android:enabled="false"/>

</RelativeLayout>